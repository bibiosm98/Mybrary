<h1>Register new user</h1>
 <div class="error-message"><%= error.errorMessage %></div>
<form action="/signup" method="POST">
    <div class="form-row">    
        <div class="form-item">
            <label>Name:</label>
            <input id="name" type="text" name="name" value="<%=user.name%>" required>
            <div class="error-message"> <%= error.errorName %> </div>
        </div>
        <div class="form-item">
            <label>Email:</label>
            <input id="email" type="email" name="email" value="<%=user.email%>" required>
            <div id="email-error" class="error-message"> <%= error.errorEmail %> </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-item">
            <label>Password:</label>
            <input id="pass-1" type="password" name="password" required>
            <div class="error-message"> <%= error.errorPassword %> </div>
        </div>
        <div class="form-item">
            <label>Repeat password:</label>
            <input id="pass-2" type="password" name="repeatPassword" required>
            <div id="pass-2-error" class="error-message"> <%= error.errorPassword %> </div>
        </div>
    </div>
    <button id="btn-create-user" class="btn btn-primary-disabled" type="submit" >Create account</button>
</form>